<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvDate1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="tvDate1"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="32dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/tvTimeAgo1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/tvDate1"
        app:layout_constraintRight_toRightOf="@+id/tvDate1"
        app:layout_constraintTop_toBottomOf="@+id/tvDate1"
        tools:text="tvTimeAgo1" />

    <TextView
        android:id="@+id/tvDate2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/tvTimeAgo1"
        tools:text="tvDate2"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/tvTimeAgo1"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="@+id/tvTimeAgo1" />

    <TextView
        android:id="@+id/tvTimeAgo2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/tvDate2"
        app:layout_constraintRight_toRightOf="@+id/tvDate2"
        app:layout_constraintTop_toBottomOf="@+id/tvDate2"
        tools:text="tvTimeAgo2" />

    <TextView
        android:id="@+id/tvDate3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/tvTimeAgo2"
        tools:text="tvDate3"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/tvTimeAgo2"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="@+id/tvTimeAgo2" />

    <TextView
        android:id="@+id/tvTimeAgo3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/tvDate3"
        app:layout_constraintRight_toRightOf="@+id/tvDate3"
        app:layout_constraintTop_toBottomOf="@+id/tvDate3"
        tools:text="tvTimeAgo3" />

</android.support.constraint.ConstraintLayout>
